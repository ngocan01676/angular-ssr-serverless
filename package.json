{
  "name": "angular-ssr-serverless",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev:ssr": "ng run angular-ssr-serverless:serve-ssr",
    "serve:ssr": "node dist/angular-ssr-serverless/server/main.js",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server && terser dist/server.js -o dist/server.js -c -m --keep-fnames",
    "prerender": "ng run angular-ssr-serverless:prerender",
    "deploy": "serverless deploy",
    "serve:local:ssr": "node server.local.js",
    "compile:server": "webpack --config webpack.server.config.js --progress --color",
    "build:client-and-server-bundles": "ng build --configuration production && ng run angular-ssr-serverless:server:production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.1.0",
    "@angular/common": "^15.1.0",
    "@angular/compiler": "^15.1.0",
    "@angular/core": "^15.1.0",
    "@angular/forms": "^15.1.0",
    "@angular/platform-browser": "^15.1.0",
    "@angular/platform-browser-dynamic": "^15.1.0",
    "@angular/platform-server": "^15.1.0",
    "@angular/router": "^15.1.0",
    "@nguniversal/express-engine": "^15.2.0",
    "@nguniversal/module-map-ngfactory-loader": "^8.2.6",
    "aws-serverless-express": "^3.4.0",
    "express": "^4.15.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.3",
    "@angular/cli": "~15.1.3",
    "@angular/compiler-cli": "^15.1.0",
    "@nguniversal/builders": "^15.2.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^14.15.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "~4.9.4",
    "webpack-cli": "^5.0.1"
  }
}
